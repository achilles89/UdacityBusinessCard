<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
    android:baselineAligned="false"
    tools:context="com.example.android.udacitybusinesscard.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        tools:context="com.example.android.udacitybusinesscard.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/this_code_could_be_yours"
            android:textColor="#5dc821"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/matrix"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/come_and_join_to_learn"
            android:textColor="#5dc821"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:context="com.example.android.udacitybusinesscard.MainActivity">

        <ImageView
            android:id="@+id/udacity_logo_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/greenudacitylogo"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="80dp"/>

        <ImageView
            android:id="@+id/green_address_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/greenaddressbutton"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/green_phone_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/greenphonebutton"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        tools:context="com.example.android.udacitybusinesscard.MainActivity">

        <TextView
            android:id="@+id/udacity_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/udacity"
            android:textColor="@color/white"
            android:layout_marginTop="85dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_2465_latham_st"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:autoLink="map"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mountain_view_ca_94043"
            android:textColor="@color/white"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:autoLink="map"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_650_555_5555"
            android:textColor="@color/white"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:autoLink="phone"
            android:textSize="18sp"
            android:layout_marginRight="66dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wwww_udacity_com"
            android:textColor="#5dc821"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="50dp"
            android:autoLink="web"
            android:textColorLink="#5dc821"/>
    </LinearLayout>


</LinearLayout>